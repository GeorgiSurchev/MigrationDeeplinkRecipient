<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">

	<data>

		<variable
			name="heroViewModel"
			type="com.example.migrationdeeplinkrecipient.ui.main.HeroViewModel" />
	</data>

	<androidx.constraintlayout.widget.ConstraintLayout
		android:id="@+id/hero_main_container"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:paddingStart="@dimen/hero_main_container_padding_start_end"
		android:paddingEnd="@dimen/hero_main_container_padding_start_end"
		tools:context=".ui.main.HeroFragment">

		<ImageView
			android:id="@+id/hero_avatar_iv"
			android:layout_width="@dimen/hero_avatar_iv_width_height"
			android:layout_height="@dimen/hero_avatar_iv_width_height"
			android:layout_marginTop="@dimen/hero_avatar_margin_top"
			android:background="@drawable/ic_black_frame_background"
			android:padding="@dimen/hero_avatar_iv_padding"
			android:scaleType="fitXY"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:logo="@{heroViewModel.heroIcon}" />

		<TextView
			android:id="@+id/hero_race"
			style="@style/BlackBoldedTextStyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/hero_margin_30dp"
			android:text="@{heroViewModel.race}"
			android:textSize="@dimen/hero_race_text_size"
			app:layout_constraintBottom_toBottomOf="@+id/hero_avatar_iv"
			app:layout_constraintStart_toEndOf="@+id/hero_avatar_iv"
			app:layout_constraintTop_toTopOf="@+id/hero_avatar_iv"
			tools:text="Human" />

		<androidx.appcompat.widget.LinearLayoutCompat
			android:id="@+id/hero_name_container"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/hero_margin_30dp"
			android:background="@drawable/ic_black_frame"
			android:minWidth="@dimen/hero_name_min_width"
			android:orientation="vertical"
			android:padding="@dimen/hero_name_container_padding"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/hero_avatar_iv">

			<TextView
				android:id="@+id/hero_name_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/character_name"
				android:textSize="@dimen/hero_name_text_size"
				tools:text="Character name :" />

			<TextView
				android:id="@+id/hero_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@={heroViewModel.characterName}"
				android:textColor="@color/black"
				android:textSize="@dimen/hero_default_text_size"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintHorizontal_bias="0"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/hero_name_title"
				tools:text="Insane" />

		</androidx.appcompat.widget.LinearLayoutCompat>

		<androidx.constraintlayout.widget.ConstraintLayout
			android:id="@+id/hero_properties_container"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/hero_margin_30dp"
			android:background="@drawable/ic_black_frame"
			android:minWidth="@dimen/hero_name_min_width"
			android:orientation="vertical"
			android:paddingStart="@dimen/hero_properties_container_padding"
			android:paddingTop="@dimen/hero_properties_container_padding"
			android:paddingEnd="@dimen/hero_properties_container_padding"
			android:paddingBottom="@dimen/hero_properties_container_padding_bottom"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/hero_name_container">

			<TextView
				android:id="@+id/hero_properties_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/hero_properties_title_margin_top"
				android:text="@string/properties_title"
				android:textSize="@dimen/hero_name_text_size"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent" />

			<TextView
				android:id="@+id/hero_strength_title"
				style="@style/HeroPropertyTitleStyle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/strength"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/hero_properties_title" />

			<TextView
				android:id="@+id/hero_strength"
				style="@style/HeroPropertyStyle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@{heroViewModel.strength}"
				app:layout_constraintBottom_toBottomOf="@+id/hero_strength_title"
				app:layout_constraintStart_toEndOf="@+id/hero_strength_title"
				app:layout_constraintTop_toTopOf="@+id/hero_strength_title"
				tools:text="100" />

			<TextView
				android:id="@+id/hero_dexterity_title"
				style="@style/HeroPropertyTitleStyle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/dexterity"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/hero_strength_title" />

			<TextView
				android:id="@+id/hero_dexterity"
				style="@style/HeroPropertyStyle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@{heroViewModel.dexterity}"
				app:layout_constraintBottom_toBottomOf="@+id/hero_dexterity_title"
				app:layout_constraintStart_toEndOf="@+id/hero_dexterity_title"
				app:layout_constraintTop_toTopOf="@+id/hero_dexterity_title"
				tools:text="100" />

			<TextView
				android:id="@+id/hero_life_title"
				style="@style/HeroPropertyTitleStyle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/life"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/hero_dexterity_title" />

			<TextView
				android:id="@+id/hero_life"
				style="@style/HeroPropertyStyle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@{heroViewModel.life}"
				app:layout_constraintBottom_toBottomOf="@+id/hero_life_title"
				app:layout_constraintStart_toEndOf="@+id/hero_life_title"
				app:layout_constraintTop_toTopOf="@+id/hero_life_title"
				tools:text="500" />

		</androidx.constraintlayout.widget.ConstraintLayout>
	</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="HeroPropertyStyle" parent="HeroPropertyTextStyle">
		<item name="android:background">@drawable/ic_black_frame_background</item>
		<item name="android:layout_marginStart">@dimen/hero_property_margin_start</item>
		<item name="android:paddingStart">@dimen/hero_property_padding_start_end</item>
		<item name="android:paddingEnd">@dimen/hero_property_padding_start_end</item>
	</style>

	<style name="HeroPropertyTitleStyle" parent="HeroPropertyTextStyle">
		<item name="android:layout_marginTop">@dimen/hero_property_margin_top</item>
	</style>

	<style name="HeroPropertyTextStyle" parent="BlackBoldedTextStyle">
		<item name="android:textSize">@dimen/hero_default_text_size</item>
	</style>

	<style name="BlackBoldedTextStyle">
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/black</item>
	</style>
</resources>